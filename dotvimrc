" NOTES:
" - vim-plug must be installed (https://github.com/junegunn/vim-plug) 
" curl -fLo ~/.vim/autoload/plug.vim --create-dirs \
"    https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
" - install plugins: :PlugInstall

set encoding=utf-8      " use an encoding that supports unicode
set nocompatible        " disabled Vi backward compatibility

" line numbering
set number
"set relativenumber

" indentation
set autoindent          " new lines inherit the indentation of previous lines
set expandtab           " convert tabs to spaces
set shiftwidth=4        " indent using four spaces
set softtabstop=4
set scrolloff=5         " the number of screen lines to keep above and below the cursor
"set sidescrolloff=5     " the number of screen columns to keep to the left and right of the cursor
"set smartindent

" wrapping
set linebreak
set wrap

" coding
syntax enable           " enable syntax highlighting
set complete=.,w,b,u,t  " completion

" search
set incsearch           " start searching before pressing enter
set hlsearch            " highlight matches
set ignorecase          " disable case-sensitivity
set smartcase           " case sensitivity only if contains uppercase

" split
set splitbelow
set splitright

" design
set laststatus=2        " always display the status bar
set visualbell          " flash the screen instead of beeping on errors
set noerrorbells        " disable beep on errors

" command line
set wildmenu            " display command line’s tab complete options as a menu
set wildmode=full

" misc
set t_Co=256            " enable 256 colors
set cursorline          " highlight the line currently under cursor
set cursorcolumn
set title               " set the window’s title, reflecting the file currently being edited


" Specify a directory for plugins
"call plug#begin('~/.vim/plugged')

" A colorful, dark color scheme for Vim
" https://github.com/nanotech/jellybeans.vim
"Plug 'nanotech/jellybeans.vim'

" Initialize plugin system
"call plug#end()


colorscheme jellybeans  " activate scheme









